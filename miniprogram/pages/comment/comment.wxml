<!--pages/comment/comment.wxml-->
 <view>
     <!--1:电影图片-->
     <view class="detail-container" style="background:url('/images/01.png') no-repeat top"></view>
     <!--2:遮罩层-->
     <view class="detail-mask"></view>
     <!--3:电影介绍-->
     <view class="detail-info">
      <!--3.1:电影图片--> 
      <image src="/images/01.png" class="detail-img"></image>
      <view class="detail">   
        <!--3.2:电影标题 25-->
        <view>哪吒</view> 
        <!--3.2.1:电影标题-->
        <view>哪吒闹海</view>
        <!--3.3:电影评分-->
        <view class="detail-sc">8.6</view>           <!--3.4:电影国家--> 
        <view>中国</view>
        <!--3.5:电影导演-->
        <view>李导</view>
      </view>
     </view> 
     <!--4:电影描述-->
     <view class="desc">
      哪吒是一个勇敢小伙子
     </view>
     <!--4.1:电影评价-->
     <van-field
       value="{{ value }}"
       placeholder="发表您的评论"
       bind:change="onContentChange"
     />
     <!--5:电影打分-->
     <van-rate 
value="{{ score }}" bind:change="onScoreChange" />
     <!--6:图片上传按钮49-->
<van-button type="warning" size="large">上传图片</van-button>     
     <!--7:图片预览区域-->
<view>
   <image src="/images/01.png"></image>
</view>
     <!--8:发表评论-->
<van-button type="danger" size="large">
提交评论</van-button> 
 </view>


